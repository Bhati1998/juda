<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- CardView -->
    <style name="mCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/radius_small</item>
    </style>
    <style name="mCardView.Tables" parent="mCardView">
        <item name="android:layout_width">@dimen/dimen_large</item>
        <item name="android:layout_height">@dimen/dimen_large</item>
        <item name="android:layout_margin">@dimen/margin_small_big</item>
    </style>

    <style name="mCardView.Levels" parent="mCardView">
        <item name="android:layout_height">@dimen/height_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_small_very_big</item>
        <item name="android:layout_marginBottom">@dimen/margin_small_very_big</item>
        <item name="android:layout_marginRight">@dimen/margin_medium_big</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium_big</item>
        <item name="cardBackgroundColor">@color/colorLevels</item>
    </style>

    <style name="mCardView.Exam" parent="mCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_small_big</item>
        <item name="android:layout_weight">0.1</item>
    </style>

    <!-- ImageView -->
    <style name="ImageView" parent="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ImageView.Lock">
        <item name="android:layout_width">@dimen/dimen_medium</item>
        <item name="android:background">@color/color_icLock</item>
        <item name="android:src">@drawable/ic_lock</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding_small_big</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ImageView.ImageBack">
        <item name="android:layout_height">@dimen/dimen_small</item>
        <item name="android:layout_width">@dimen/dimen_small</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ImageView.MultiSymbol" parent="ImageView.MultiSymbol">
        <item name="android:layout_width">@dimen/dimen_medium</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/ic_mul</item>
        <item name="android:padding">@dimen/padding_small_big</item>
        <item name="android:tint">@color/colorButtonHelp</item>
    </style>

    <style name="ImageView.ButtonClick" parent="ImageView.ButtonClick">
        <item name="android:layout_width">@dimen/dimen_small</item>
        <item name="android:layout_height">@dimen/dimen_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
    </style>

    <!-- RelativeLayout -->
    <style name="mToolBar" parent="mToolBar">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>


    <!-- TextView -->

    <style name="mTextToolBar" parent="mTextToolBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="mTextViewLevels" parent="mTextViewLevels">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="mTextViewSaveTables" parent="mTextViewSaveTables">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_learn</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:layout_marginRight">@dimen/margin_small_big</item>
        <item name="android:layout_marginLeft">@dimen/margin_small_big</item>
        <item name="fontPath">fonts/num_font.ttf</item>
    </style>
</resources>