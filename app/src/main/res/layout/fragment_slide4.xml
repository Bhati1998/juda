<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_slides4"
    tools:context="com.academyatinfo.multtable.appintro.slides.Slide4Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_layout_tables">

        <ImageView
            android:id="@+id/ic_slide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_ic_intro"
            android:layout_marginBottom="@dimen/marginTB_cardView_levels"
            android:layout_marginTop="@dimen/marginTB_cardView_levels"
            android:background="@drawable/background_logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/text_slide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_slide4"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_textView"
            android:gravity="center"
            android:text="لنبدأ ..."
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_very_large" />

    </RelativeLayout>
</FrameLayout>
